{
  "name": "hai-server",
  "version": "0.0.5",
  "description": "Serves JSON files through REST routes with authentication.",
  "main": "./lib/server/index.js",
  "bin": "./lib/cli/bin.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build && cross-env NODE_ENV=test jest && npm run lint",
    "start": "run-p start:**",
